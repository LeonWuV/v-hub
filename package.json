{
  "name": "v-hub",
  "version": "1.0.0",
  "description": "A vue plugin working as event bus.",
  "author": "wemlion <angusfu1126@qq.com>",
  "scripts": {
    "server": "browser-sync start --server --reload-delay 1 --files \"index.html, ./dist/**\"",
    "build:watch": "cross-env NODE_ENV=development rollup -c rollup.config.js -w",
    "build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "start": "run-p build:watch server"
  },
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "cross-env": "^3.1.4",
    "http-server": "^0.9.0",
    "npm-run-all": "^4.0.1",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-watch": "^3.2.2"
  }
}
